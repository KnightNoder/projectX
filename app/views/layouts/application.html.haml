!!!
%html
%head
	%title Translator | Online Word Translator Application
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%header
		.header_inner
			= link_to image_tag( 'logo.004.jpg'), root_path, id: "logo"
			%nav
				- if user_signed_in?
					= link_to "New Project", '#', :id => "booked"
					= link_to "Sign Out", destroy_user_session_path, method: :delete
				- else
					= link_to "Log In", new_user_session_path
	%p.notice= notice
	%p.alert= alert

	= yield