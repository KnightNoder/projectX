.wrapper_with_padding
	#projects.clearfix
		- unless @category.blank?
			- @category.each do |category|
				%a{ href: (url_for [category])}
					.project
						%p.title= category.name
						%p.date= time_ago_in_words(category.created_at)
			%button.btn{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"} New Category
		- else
			%h2 Add a category
			%p It appears you haven't created any categoryies yet... Lets fix that. Why don't you go ahead and create a new category.
			%button= link_to "New Category", new_category_path